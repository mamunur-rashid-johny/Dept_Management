<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_catalog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.dept_management.CatalogActivity">

    <Button
        android:text="Teacher Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:id="@+id/Btn_tch" />

    <Button
        android:text="Student Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:id="@+id/Btn_std"
        android:layout_below="@+id/Btn_tch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Employee Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Btn_emp"
        android:layout_below="@+id/Btn_std"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Class Management"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Btn_cls"
        android:layout_below="@+id/Btn_emp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Class Routine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/Btn_rtn"
        android:layout_below="@+id/Btn_cls"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <Button
        android:text="Seminar Library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Btn_smlb"
        android:layout_below="@+id/Btn_rtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
